{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib"
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",

  ],
  "exclude": [
    "node_modules"
  ],
  
}
